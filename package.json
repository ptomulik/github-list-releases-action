{
  "name": "@ptomulik/github-list-releases-action",
  "version": "0.2.1",
  "description": "GitHub action to retrieve releases from a remote repository",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:ts": "tsd",
    "pretest:ts": "npm run compile",
    "compile": "tsc",
    "build": "ncc build",
    "prebuild": "npm run compile",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint --fix '**/*.ts'",
    "pre-checkin": "npm run lint && rm -rf lib && npm run build && npm run test:coverage && npm run test:ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ptomulik/github-list-releases-action"
  },
  "keywords": [],
  "author": "Pawe≈Ç Tomulik <ptomulik@meil.pw.edu.pl>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@octokit/core": "^3.2.5",
    "@octokit/plugin-paginate-rest": "^2.9.1",
    "@ptomulik/octokit-paginate-rest-limit": "^1.1.1"
  },
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.0.2",
    "@semantic-release/github": "^7.2.3",
    "@types/fetch-mock": "^7.3.3",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "@vercel/ncc": "^0.26.2",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "fetch-mock": "^9.11.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tsd": "^0.14.0",
    "typescript": "^4.1.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "package.json"
              ],
              "from": "\"version\": \".*\"",
              "to": "\"version\": \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "package.json",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            },
            {
              "files": [
                "src/version.ts",
                "dist/index.js"
              ],
              "from": "VERSION = \".*\"",
              "to": "VERSION = \"${nextRelease.version}\"",
              "results": [
                {
                  "file": "src/version.ts",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                },
                {
                  "file": "dist/index.js",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            [
              "package.json",
              "README.md",
              "action.yml",
              "dist/**/*.js"
            ]
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "source": "lib/index.js",
  "types": "lib/index.d.ts",
  "main": "lib/index.js"
}
